<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="SwagCookieConsentManager\Subscriber\Resources">
            <argument>%swag_cookie_consent_manager.plugin_dir%</argument>
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="SwagCookieConsentManager\Subscriber\RemoveCookies">
            <argument type="service" id="config" />
            <argument type="service" id="SwagCookieConsentManager\Bundle\CookieBundle\Services\CookieHandler" />

            <tag name="shopware.event_subscriber" />
        </service>

        <service id="SwagCookieConsentManager\Services\ModifiedConfigFactory" decorates="config_factory" />
    </services>
</container>